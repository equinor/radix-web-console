server {
    listen       80;
    server_name  localhost;

    root /app;

    location / {
        add_header 'X-RADIX-CLUSTER-NAME' '${radix_clustername}';
        add_header 'X-RADIX-ENVIRONMENT-NAME' '${radix_environment}';
        add_header 'X-RADIX-RUN' '${radix_run}';
        try_files $uri /index.html;
    }

    error_page   500 502 503 504  /50x.html;

    location = /50x.html {
        root   /app;
    }
}
